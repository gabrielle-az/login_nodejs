<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
        <title>Login</title>
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="px-5 py-5" id="form1">
            <% if(erro != ""){ %>
            <div class="alert alert-danger">
                <p>
                    <%= erro %>
                </p>
            </div>
            <% } %>

            <form method="POST" action="/logar" class="form-data" v-if="!submitted">
                <div class="forms-inputs mb-4">
                    <span>E-mail</span>
                    <input autocomplete="off" type="text"
                        v-model="email"
                        v-bind:class="{'form-control':true, 'is-invalid' : !validEmail(email) && emailBlured}"
                        v-on:blur="emailBlured = true" 
                        name="email"
                        required>
                </div>
                <div class="forms-inputs mb-4">
                    <span>Senha</span>
                    <input autocomplete="off" type="password"
                        v-model="password"
                        v-bind:class="{'form-control':true, 'is-invalid' : !validPassword(password) && passwordBlured}"
                        v-on:blur="passwordBlured = true" 
                        name="password"
                        required>
                </div>
                <div class="mb-3">
                    <button v-on:click.stop.prevent="submit" class="btn btn-dark w-100">Login</button>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    <%- include('../partials/scripts'); %>

</body>

</html>